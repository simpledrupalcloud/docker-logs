<IfModule mod_ssl.c>
  <VirtualHost *:443>
    DocumentRoot /logs/data

    <Directory "/logs/data">
      Options Indexes FollowSymLinks MultiViews
      AllowOverride All
      Order allow,deny
      Allow from all
    </Directory>

    SSLEngine on
    SSLCertificateFile /logs/ssl/certs/logs.crt
    SSLCertificateKeyFile /logs/ssl/private/logs.key
  </VirtualHost>
</IfModule>
